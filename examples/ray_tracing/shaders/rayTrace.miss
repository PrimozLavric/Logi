#version 460
#extension GL_NV_ray_tracing : require
#extension GL_GOOGLE_include_directive : require

struct hitPayload {
    vec3 hitValue;
};

layout(location = 0) rayPayloadNV hitPayload prd;

layout(push_constant) uniform Constants
{
    vec4 clearColor;
}

void main() {
    prd.hitValue = clearColor.xyz;
}